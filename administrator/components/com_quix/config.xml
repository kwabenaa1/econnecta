<?xml version="1.0" encoding="utf-8"?>
<config>
    <fieldset
        name="quix"
        label="JGLOBAL_QUIX"
        description="COM_QUIX_CONFIG_QUIX_SETTINGS_DESC">

        <field
            name="dev_mode" type="radio"
            label="COM_QUIX_CONFIG_DEV_MOOD_LABEL"
            description="COM_QUIX_CONFIG_DEV_MOOD_DESC"
            class="btn-group"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
            name="api_https" type="radio"
            label="COM_QUIX_CONFIG_API_HTTPS_LABEL"
            description="COM_QUIX_CONFIG_API_HTTPS_DESC"
            class="btn-group"
            default="1"
            >
            <option value="0">HTTP</option>
            <option value="1">HTTPS</option>
        </field>
        
        <field
            name="load_fontawosome" type="radio"
            label="COM_QUIX_CONFIG_LOAD_FONTAWOSOME_LABEL"
            description="COM_QUIX_CONFIG_LOAD_FONTAWOSOME_DESC"
            class="btn-group"
            default="1"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field
            name="safemode" type="radio"
            label="COM_QUIX_CONFIG_SAFEMODE_LABEL"
            description="COM_QUIX_CONFIG_SAFEMODE_DESC"
            class="btn-group"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field
            name="generator_meta" type="radio"
            label="COM_QUIX_CONFIG_GENERATOR_META_LABEL"
            description="COM_QUIX_CONFIG_GENERATOR_META_DESC"
            class="btn-group"
            default="1"
            >
            <option value="0">JHIDE</option>
            <option value="1">JSHOW</option>
        </field>        

        <field
            name="async_builderjs" type="radio"
            label="COM_QUIX_CONFIG_ASYNC_BUILDERJS_LABEL"
            description="COM_QUIX_CONFIG_ASYNC_BUILDERJS_DESC"
            class="btn-group"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field
            name="fix_iframeloading" type="radio"
            label="COM_QUIX_CONFIG_FIX_IFRAMELOADING_LABEL"
            description="COM_QUIX_CONFIG_FIX_IFRAMELOADING_DESC"
            class="btn-group"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        
        <field
            name="export_with_image" type="radio"
            label="COM_QUIX_CONFIG_EXPORT_WITH_IMAGE_LABEL"
            description="COM_QUIX_CONFIG_EXPORT_WITH_IMAGE_DESC"
            class="btn-group"
            default="0"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>


        <field type="spacer" name="optimization_hr" hr="true" />
        <field type="spacer" label="&lt;b&gt;Advanced parameters&lt;/b&gt;"/>

        <field
            name="optimize_js" type="radio"
            label="COM_QUIX_CONFIG_OPTIMIZE_JS_LABEL"
            description="COM_QUIX_CONFIG_OPTIMIZE_JS_DESC"
            class="btn-group"
            default="1"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>  
        
        <field
            name="optimize_css" type="radio"
            label="COM_QUIX_CONFIG_OPTIMIZE_CSS_LABEL"
            description="COM_QUIX_CONFIG_OPTIMIZE_CSS_DESC"
            class="btn-group"
            default="1"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>  

        <!-- hidden items -->
        <field name="enable_com_content" type="hidden" />
        <field name="enable_mod_custom" type="hidden" />
        <field name="enable_com_k2" type="hidden" />
        <field name="enable_com_easyblog" type="hidden" />
        <field name="enable_com_digicom" type="hidden" />
        <field name="enable_com_virtuemart" type="hidden" />
        <field name="enable_com_judirectory" type="hidden" />
        <field name="enable_com_zoo" type="hidden" />
        <field name="enable_com_hikashop" type="hidden" />
        <field name="enable_com_j2store" type="hidden" />
        <field name="enable_custom_context" type="hidden" />
        <field name="custom_context" type="hidden" />
        

    </fieldset>
    
    <fieldset
        name="amp"
        label="AMP"
        description="AMP Settings">

        <field
            name="header_bg" type="color"
            label="Header Background"
            description=""
            default="#fff"
        />

        <field
            name="header_color" type="color"
            label="Header Color"
            description=""
            default="#222"
        />

        <field
            name="header_logo" type="media"
            label="AMP Logo"
            description=""
        />

        <field
            name="logo_width" type="text"
            label="Logo Width PX"
            description=""
            default="100px"
        />
        
        <field
            name="logo_height" type="text"
            label="Logo height PX"
            default="63px"
            description=""
        />
        
        <field
            name="sidebar_menu" type="menu"
            label="Sidebar Menu"
            description=""
        />
        
        <field
            name="amp_default" type="radio"
            label="Enable AMP"
            description="You can enable amp for all pages or you can specify which page to enable manually from page settings."
            class="btn-group"
            default="1"
            >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>  

    </fieldset>

    <fieldset
        name="image_responsive"
        label="Image Responsive"
        description="Set default image width for responsive settings...">

        <fields name="responsive_image">
            <field
                name="quality" type="number"
                label="Image Quality"
                description=""
                default="80"
                min="0" 
                max="100"
            />

            <field
                name="large_desktop" type="number"
                label="Large Desktop"
                description=""
                default="1900"
            />
            <field
                name="desktop" type="number"
                label="Desktop"
                description=""
                default="1400"
            />
            <field
                name="tablet" type="number"
                label="Tablet"
                description=""
                default="1024"
            />
            <field
                name="mobile" type="number"
                label="Mobile"
                description=""
                default="786"
            />
            <field
                name="mini" type="number"
                label="Mini Screen"
                description=""
                default="400"
            />

        </fields>

    </fieldset>
    
    <fieldset
        name="permissions"
        description="JCONFIG_PERMISSIONS_DESC"
        label="JCONFIG_PERMISSIONS_LABEL">

        <field
            name="rules" type="rules" component="com_quix"
            class="inputbox" filter="rules" validate="rules"
            label="JCONFIG_PERMISSIONS_LABEL"
            section="component" 
        />
    </fieldset>
</config>
